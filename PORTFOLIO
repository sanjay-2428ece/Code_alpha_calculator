  <script>
    // Lightweight contact handler (replace with server/API or Formspree for production)
    function handleSubmit(){
      const n=document.getElementById('name').value.trim();
      const e=document.getElementById('email').value.trim();
      const m=document.getElementById('msg').value.trim();
      if(!n||!e||!m){alert('fill all fields');return}
      // simple local UX: copy a mailto so it opens in user's client
      const subject=encodeURIComponent('Portfolio contact from '+n);
      const body=encodeURIComponent('Name: '+n+'\nEmail: '+e+'\n\n'+m);
      window.location.href = 'mailto:you@domain.com?subject='+subject+'&body='+body;
    }

    // reveal animations on load
    document.addEventListener('DOMContentLoaded', ()=>{
      document.querySelectorAll('.reveal').forEach((el,i)=>{ el.style.animationDelay=(i*80)+'ms' });
    });
  </script>

