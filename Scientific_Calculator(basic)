  <script>
    // Small utilities: mobile menu toggle + scrollspy + reveal on scroll
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu -- simple toggle to show nav links as a temporary dropdown
    const menu = document.getElementById('menuToggle');
    menu.addEventListener('click', ()=>{
      const nav = document.querySelector('nav');
      if(window.innerWidth <= 900){
        nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
        nav.style.flexDirection = 'column';
        nav.style.position = 'absolute';
        nav.style.right = '24px';
        nav.style.top = '70px';
        nav.style.background = 'linear-gradient(180deg, rgba(15,23,36,0.95), rgba(7,10,24,0.95))';
        nav.style.padding = '12px';
        nav.style.borderRadius = '12px';
      }
    });

    // Reveal on scroll
    const observer = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting) e.target.classList.add('visible');
      });
    }, {threshold:0.12});
    document.querySelectorAll('.reveal').forEach(el=>observer.observe(el));

    // Simple scrollspy to highlight nav (adds .active class) — keeps it minimal
    const sections = document.querySelectorAll('section[id]');
    window.addEventListener('scroll', ()=>{
      const y = window.scrollY + 80;
      sections.forEach(sec=>{
        const top = sec.offsetTop;
        const h = sec.offsetHeight;
        const id = sec.id;
        const link = document.querySelector(`nav a[href='#${id}']`);
        if(!link) return;
        if(y >= top && y < top + h){
          link.style.border = '1px solid rgba(255,255,255,0.06)';
        } else {
          link.style.border = 'none';
        }
      })
    });
  </script>

  
